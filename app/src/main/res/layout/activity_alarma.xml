<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo_pastillas"
        android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_azulclaro"
                    android:gravity="center"
                    android:padding="40dp"
                    android:text="Alarma"
                    android:textSize="30dp"
                    android:textColor="@color/colorblacktext"
                    android:textStyle="bold"
                    />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_back_other"
                    android:scaleType="centerCrop" />
                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="100dp"
                    android:layout_gravity="top|right"  />
<!--                    android:src="@drawable/"-->


            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="88dp">


                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="50dp"

                        android:columnCount="1"
                        >
                        <CheckBox
                            android:id="@+id/cbDiario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/diario"

                            android:textColor="@color/colorblacktext">

                        </CheckBox>

                        <CheckBox
                            android:id="@+id/cbLunes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="1"
                            android:text="Lunes">

                        </CheckBox>

                        <!--                android:layout_columnSpan="1"-->

                        <CheckBox
                            android:id="@+id/cbMartes"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Martes"

                            android:textColor="@color/colorblacktext">

                        </CheckBox>

                        <CheckBox
                            android:id="@+id/cbMiercoles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Miercoles"

                            android:textColor="@color/colorblacktext">

                        </CheckBox>

                        <CheckBox
                            android:id="@+id/cbJueves"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jueves"
                            android:textColor="@color/colorblacktext">

                        </CheckBox>

                        <CheckBox
                            android:id="@+id/cbViernes"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Viernes"
                            android:textColor="@color/colorblacktext">

                        </CheckBox>

                        <CheckBox
                            android:id="@+id/cbSabado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sabado"
                            android:textColor="@color/colorblacktext">

                        </CheckBox>

                        <CheckBox
                            android:id="@+id/cbDomingo"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Domingo">

                        </CheckBox>

                    </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="27dp"
                android:gravity="center_vertical"
                android:background="@color/colorGray"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:padding="9dp"
                    android:text="T"
                    android:textColor="@color/colorblacktext"
                    android:background="@color/color_darkGray"/>

                <Button
                    android:id="@+id/btTonos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tonos"
                    android:gravity="center"
                    android:textColor="@color/colorblacktext"/>

            </LinearLayout>

                </LinearLayout>


</FrameLayout>