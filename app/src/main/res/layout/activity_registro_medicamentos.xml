<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/color_azulclaro"
        android:gravity="center"
        android:padding="10dp"
        android:text="Registro de Medicamentos"
        android:textColor="@color/colorblacktext"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Registro de Medicamentos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAñadirMed1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFBDF6F3"
            android:text="Añadir medicamento 1"


            />



        <Button
            android:id="@+id/btAñadirMed2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFBDF6F3"
            android:text="Registro de medicamentos" />


    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btSalir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:backgroundTint="#03A9F4"
            android:text="salir" />

    </LinearLayout>
</LinearLayout>
