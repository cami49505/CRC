<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/colorLightBlue"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/main_menu_header"
        android:textColor="@color/colorblack"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Registro de Medicamentos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAñadirMed1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFBDF6F3"
            android:text="Añadir medicamento 1" />

        <Button
            android:id="@+id/btAñadirMed2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFBDF6F3"
            android:text="Añadir medicamento 2" />

        <Button
            android:id="@+id/btAñadirMed3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFBDF6F3"
            android:text="Añadir medicamento 3" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAñadirMed4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFBDF6F3"
            android:text="Añadir medicamento 4" />

        <Button
            android:id="@+id/btAñadirMed5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFBDF6F3"
            android:text="Añadir medicamento 5" />

        <Button
            android:id="@+id/btAñadirMed6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFBDF6F3"
            android:text="Añadir medicamento 6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAñadirMed7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFBDF6F3"
            android:text="Añadir medicamento 7" />

        <Button
            android:id="@+id/btAñadirMed8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFBDF6F3"
            android:text="Añadir medicamento 8" />

        <Button
            android:id="@+id/btAñadirMed9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#BDF6F3"
            android:text="Añadir medicamento 9" />
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btSalir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:backgroundTint="#03A9F4"
            android:text="salir" />

    </LinearLayout>
</LinearLayout>